{
    "extends": "airbnb",
    "rules": {
        "max-len": "warn",
        "comma-dangle": ["error", {
            "arrays": "ignore",
            "objects": "ignore",
            "imports": "never",
            "exports": "never",
            "functions": "ignore"
        }],
        "no-unused-vars":"off",
        "import/no-extraneous-dependencies": ["error", {"devDependencies": true, "optionalDependencies": true, "peerDependencies": true}]

    },
    "env": {
        "mocha": true
    }
}